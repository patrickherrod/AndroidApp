<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gstat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:name="com.gstat.activities.MyApp"
        android:icon="@drawable/ic_launcher"
        android:label="GolfStat Mobile"
        android:allowBackup="true">
        <activity
            android:name="com.gstat.activities.GolfStatProtoActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.gstat.activities.SpectatorActivity"
            android:label="@string/app_name"/>
        <activity 
            android:name="com.gstat.activities.CoachPlayerActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="com.gstat.activities.TabActivity"
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow"/>
        <activity
            android:name="com.gstat.activities.LeaderBoardActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="com.gstat.activities.CreateNewEventActivity"
            android:label="@string/app_name"/>
    </application>
</manifest>